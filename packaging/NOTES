# common options for Cmake prior to `make install`

cmake .. -DCMAKE_INSTALL_PREFIX=$HOME/local \
	-DZETAGLEST_DATA_INSTALL_PATH=$HOME/local/data/zetaglest \
	-DZETAGLEST_BIN_INSTALL_PATH=games

